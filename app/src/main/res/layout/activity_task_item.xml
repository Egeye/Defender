<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_task_icon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="7dp"
        android:src="@drawable/shape_round_green" />

    <TextView
        android:id="@+id/tv_task_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_task_icon"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/iv_task_icon"
        android:singleLine="true"
        android:text="应用程序名称"
        android:textColor="#82B651"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_task_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_task_icon"
        android:layout_alignLeft="@id/tv_task_name"
        android:layout_marginBottom="2dp"
        android:text="大小"
        android:textColor="#82B651"
        android:textSize="15sp" />

    <CheckBox
        android:id="@+id/cb_task_chose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="7dp"
        android:clickable="false"
        android:focusable="false" />

</RelativeLayout>